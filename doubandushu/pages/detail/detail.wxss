/* pages/detail/detail.wxss */
.t-detail-logo{
  width: 100%;
  height: 500rpx;
  background-color: cornflowerblue
}
.wrapper-content-brief{
  margin-bottom: 30rpx;
  display: flex;
  flex-wrap: wrap
}
.wrapper-content-introduction{
  width: 440rpx;
  height: 180rpx
}
.wrapper-content-introduction-title{
  color: black;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.wrapper-content-introduction-detail{
  color: rgb(166, 166, 166);
  font-size: 25rpx;
}
.wrapper-content-score{
  width: 250rpx;
  height: 180rpx
}
.wrapper-content-score-content{
  float: right;
  width: 150rpx;
  height: 150rpx;
  box-shadow: 0 1rpx 20rpx 0 #888888;
}
.wrapper-content-score-content-title{
  text-align: center;
  margin-top: 30rpx;
  font-size: 35rpx;
  color:black;
}
.wrapper-content-str{
  display: flex;
  flex-wrap: wrap
}
.wrapper-content-label{
  color: rgb(255, 172, 45);
  padding: 5rpx 15rpx;
  font-size: 25rpx;
  margin: 0 10rpx 0 0;
  border: 1rpx solid rgb(255, 172, 45);
  border-radius: 5rpx; 
}
.wrapper-content-chart{
  font-size: 25rpx;
  color: rgb(166, 166, 166);
  margin-bottom: 30rpx;
}
.wrapper-content-chart-content{
  font-size: 30rpx;
  color: black;
}
.wrapper-content-score-content-stsr{
  width: 100%;
  height: 30rpx;
}